<div class="container">
  <div class="row flex-nowrap">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-10 d-flex flex-column mx-auto">
      <%= render 'admin/users/header' %>
      <div class="d-flex justify-content-around">
        <%= link_to admin_users_path, class:'flex-fill text-center text-dark text-decoration-none btn btn-outline-light border-0 mt-3 pt-3' do %>
          <div>
            ユーザー
          </div>
        <% end %>
        <div class="flex-fill text-center border-bottom border-5 border-primary mt-3 pt-3">
          投稿
        </div>
      </div>
      <div class="items-scroll" style="overflow-y: scroll; height: 500px;">
        <%= render 'index', posts: @posts %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'scroll' %>