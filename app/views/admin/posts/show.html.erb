<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
      <div>
        <%= link_to admin_posts_path do %>
          <i class="fa-solid fa-arrow-left fa-lg"></i>
          投稿一覧
        <% end %>
      </div>
      <div class="border p-2 m-1 post-item">
        <div class="d-flex">
          <div class="text-center">
            <%= image_tag @post.user.get_profile_image, class: "rounded-circle border", size: '50x50' %>
            <br>
            Lv.<%= @post.user.level %>
          </div>
          <div class="d-flex align-items-center font-weight-bold ml-2 mb-4">
            <%= @post.user.name %>
          </div>
        </div>
        <div style="word-wrap: break-word;">
          <div>
            <%= @post.body %>
            <br>
            <% if @post.image.attached? %>
              <%= image_tag @post.image %>
            <% end %>
          </div>
        </div>
        <div class="d-flex align-items-center justify-content-center bd-highlight">
          <div class="bd-highlight p-2">
            <i class="fa-solid fa-thumbs-up"></i>
            <%= @post.count_valid_likes %>
          </div>
          <div class="bd-highlight p-2">
            <i class="fa-regular fa-comments"></i>
            <%= @post.comments.count %>
          </div>
          <div class="ml-auto p-2 bd-highlight">
            <%= l @post.created_at %>
          </div>
          <div>
            <%= link_to '削除', admin_post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
      <div>
        <%= render 'admin/comments/comment', post: @post %>
      </div>
    </div>
  </div>
</div>