<div class="scroll-list jscroll">
  <% posts.each do |post| %>
    <%= link_to admin_post_path(post), class: "text-decoration-none text-dark" do %>
      <div class="border p-2 m-1 post-item rounded shadow">
        <div class="d-flex">
          <div class="text-center">
            <%= image_tag post.user.get_profile_image, class: "rounded-circle border", size: '50x50' %>
            <br>
            Lv.<%= post.user.level %>
          </div>
          <div class="d-flex align-items-center font-weight-bold ml-2 mb-4">
            <%= post.user.name %>
          </div>
        </div>
        <div style="word-wrap: break-word;">
          <div>
            <%= post.body %>
            <br>
            <% if post.image.attached? %>
              <%= image_tag post.image, class: "img-fluid" %>
            <% end %>
          </div>
        </div>
        <div class="d-flex align-items-center justify-content-center bd-highlight">
          <div class="bd-highlight p-2">
            <i class="far fa-thumbs-up text-secondary"></i>
            <%= post.count_valid_likes %>
          </div>
          <div class="bd-highlight p-2">
            <i class="far fa-comment"></i>
            <%= post.comments.count %>
          </div>
          <div class="ml-auto p-2 bd-highlight">
            <%= l post.created_at %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= paginate posts %>
</div>