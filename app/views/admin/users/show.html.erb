<div class="container">
  <div class="row">
    <div class="mx-auto">
      <table>
        <tbody>
          <tr>
            <td>
              ニックネーム<span>アカウント名</span>
            </td>
            <td>
              <%= @user.name %><span><%= @user.account_name %></span>
            </td>
          </tr>
          <tr>
            <td>氏名</td>
            <td>
              <%= @user.full_name %>
            </td>
          </tr>
          <tr>
            <td>レベル</td>
            <td>
              <%= @user.level %>
            </td>
          </tr>
          <tr>
            <td>経験値</td>
            <td>
              <%= @user.experience_point %>
            </td>
          </tr>
          <tr>
            <td>
              ステータス
            </td>
            <td>
              <% if @user.status == 'open' %>
                公開
              <% else %>
                非公開
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to '編集する', edit_admin_user_path(@user.id) %>
    </div>
  </div>
</div>