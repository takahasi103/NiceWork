<div class="container">
  <div class="row flex-nowrap">
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-10 d-flex flex-column mx-auto">
      <div class="m-2">
        <%= link_to admin_users_path, class: "text-dark h4" do %>
          <i class="fa fa-arrow-left"></i>
          ユーザー一覧
        <% end %>
      </div>
      <div class="d-flex bd-highlight m-2 flex-wrap">
        <div class="text-center">
          <%= image_tag @user.get_profile_image, size: '100x100', class: "rounded-circle" %>
          <br>
          Lv. <%= @user.level %>
        </div>
        <div class="d-flex align-items-center text-dark h3 m-0">
          <%= @user.name %>
        </div>
        <div class="d-flex align-items-center text-muted ml-2">
          @<%= @user.account_name %>
        </div>
      </div>
      <div>
        氏名:
        <%= @user.full_name %>
      </div>
      <div>
        自己紹介
        <br>
        <%= @user.introduction %>
      </div>
      <div class="text-center">
        <%= link_to 'アカウント削除', admin_user_path(@user.id), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "btn btn-sm btn-danger" %>
      </div>
      <div class="d-flex justify-content-around m-2">
        <div class="flex-fill text-center border-bottom border-5 border-dark mt-3 pt-3 pb-1">
          投稿
        </div>
      </div>
      <div class="items-scroll" style="overflow-y: scroll; height: 500px;">
        <%= render 'admin/posts/index', posts: @posts %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'scroll' %>