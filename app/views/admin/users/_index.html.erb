<div class="scroll-list jscroll">
  <% users.each do |user|%>
    <%= link_to admin_user_path(user.id) do %>
      <div class="d-flex user-item p-1">
        <div class="d-flex">
          <div class="text-center">
            <%= image_tag user.get_profile_image, class: "rounded-circle border", size: '50x50' %>
          </div>
          <div class="d-flex align-items-center font-weight-bold">
            <%= user.name %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= paginate users %>
</div>