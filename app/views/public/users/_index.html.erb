<% if users.exists? %>
  <div class="scroll-list jscroll">
    <% users.each do |user|%>
      <div class="d-flex justify-content-between user-item p-1">
        <div class="d-flex">
          <div class="text-center">
            <%= image_tag user.get_profile_image, class: "rounded-circle border", size: '50x50' %>
            <br>
            Lv.<%= user.level %>
          </div>
          <div class="d-flex align-items-center font-weight-bold ml-2 mb-4">
            <%= user.name %>
          </div>
        </div>
        <div class="d-flex align-items-center justify-content-center">
          <% if user != current_user %>
            <% if current_user.following?(user) %>
              <%= link_to "フォロー中", user_relationships_path(@user), method: :delete, class: "btn btn-primary" %>
            <% else %>
              <%= link_to "フォローする", user_relationships_path(@user), method: :post, class: "btn btn-success" %>
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    <%= paginate users %>
  </div>
<% else %>
  <p>ユーザーはいません</p>
<% end %>