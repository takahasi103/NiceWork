<div class="container">
  <div class="row row flex-nowrap">
    <%= render 'layouts/info' %>
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-10 d-flex flex-column">
      <%= render 'public/users/profile', user: @user %>
      <% if can_view_profile?(current_user, @user) %>
        <div class="d-flex justify-content-around m-2">
          <%= link_to user_path(@user), class:'flex-fill text-center text-dark text-decoration-none btn btn-outline-light border-0 mt-3 pt-3' do %>
            <div>
              投稿
            </div>
          <% end %>
          <div class="flex-fill text-center border-bottom border-5 border-primary mt-3 pt-3">
              いいね 
          </div>
          <%= link_to user_followings_path(@user), class:'flex-fill text-center text-dark text-decoration-none btn btn-outline-light border-0 mt-3 pt-3' do %>
            <dvi>
              フォロー中
            </dvi>
          <% end %>
          <%= link_to user_followers_path(@user), class:'flex-fill text-center text-dark text-decoration-none btn btn-outline-light border-0 mt-3 pt-3' do %>
            <div>
              フォロワー
            </div>
          <% end %>
        </div>
        <div class="items-scroll" style="overflow-y: scroll; height: 500px;">
          <%= render 'public/posts/index', posts: @posts %>
        </div>
      <% else %>
        <div class="text-center">
          <div>
            <%= @user.name %>の投稿はフォローしないと見れません。
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'scroll' %>