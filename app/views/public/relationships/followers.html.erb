<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render 'layouts/info' %>
    </div>
    <div class="col-6">
      <div class="m-3">
        <div class="d-flex m-2">
          <div>
            <i class="fa-solid fa-arrow-left"></i>
          </div>
          <div class="d-flex align-items-center font-weight-bold m-2">
            <%= @user.name %>
          </div>
        </div>
      </div>
      <div class="d-flex justify-content-around m-3">
        <div>
          <%= link_to user_followings_path(@user) do %>
            フォロー中 <%= @user.followings.count %>
          <% end %>
        </div>
        <div>
            フォロワー <%= @user.followers.count %>
        </div>
      </div>
      <div class="users-scroll" style="overflow-y: scroll; height: 500px;">
        <%= render 'public/users/index', users: @users %>
      </div>
    </div>
  </div>
</div>