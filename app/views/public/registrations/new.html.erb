<div class="container">
  <div class="row">
    <div class="mx-auto m-3">
      <div>
        <%= link_to root_path, class: "text-dark" do %>
          <i class="fa fa-arrow-left"></i>
          戻る
        <% end %>
      </div>
      <h2>新規登録</h2>
      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group border rounded">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>アカウント名</td>
                <td class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text p-1">@</span>
                  </div>
                  <%= f.text_field :account_name, class: "form-control" %>
                </td>
              </tr>
              <tr>
                <td>ニックネーム</td>
                <td>
                  <%= f.text_field :name, class: "form-control" %>
                </td>
              </tr>
              <tr>
                <td>氏名（非公開）</td>
                <td class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text p-1">姓</span>
                  </div>
                  <%= f.text_field :first_name, class: "form-control" %>
                </td>
                <td class="input-group">
                  <div class="input-group-prepend">
                    <span class="input-group-text p-1">名</span>
                  </div>
                  <%= f.text_field :last_name, class: "form-control" %>
                </td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td>
                  <%= f.email_field :email, class: "form-control" %>
                </td>
              </tr>
              <tr>
                <td>パスワード（６文字以上)</td>
                <td>
                  <%= f.password_field :password, class: "form-control" %>
                </td>
              </tr>
              <tr>
                <td>パスワード（確認用）</td>
                <td>
                  <%= f.password_field :password_confirmation, class: "form-control" %>
                </td>
              </tr>
            </tbody>
          </table>
          <div class="text-center m-3">
            <%= f.submit '新規登録', class: "btn btn-success sign_in" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
