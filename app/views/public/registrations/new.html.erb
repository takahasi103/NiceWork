<div class="container">
  <div class="row">
    <div class="mx-auto">
      <h2>Sign up</h2>
      <%= form_with model: @user, url: registration_path(resource_name), local: true do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="form-group">
          <table class="table table-borderless">
            <tbody>
              <tr>
                <td>アカウント名</td>
                <td></td>
                <td>
                  <%= f.text_field :account_name %>
                </td>
              </tr>
              <tr>
                <td>ユーザー名</td>
                <td></td>
                <td>
                  <%= f.text_field :name %>
                </td>
              </tr>
              <tr>
                <td>氏名（非公開）</td>
                <td>姓</td>
                <td>
                  <%= f.text_field :first_name %>
                </td>
                <td>名</td>
                <td>
                  <%= f.text_field :last_name %>
                </td>
              </tr>
              <tr>
                <td>メールアドレス</td>
                <td></td>
                <td>
                  <%= f.email_field :email %>
                </td>
              </tr>
              <tr>
                <td>パスワード（６文字以上)</td>
                <td></td>
                <td>
                  <%= f.password_field :password %>
                </td>
              </tr>
              <tr>
                <td>パスワード（確認用）</td>
                <td></td>
                <td>
                  <%= f.password_field :password_confirmation %>
                </td>
              </tr>
            </tbody>
          </table>
          <%= f.submit '新規登録' %>
        </div>
      <% end %>
      <%= render "public/shared/links" %>
    </div>
  </div>
</div>
