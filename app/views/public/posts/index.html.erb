<div class="container">
  <div class="row flex-nowrap">
    <%= render 'layouts/info' %>
    <div class="col-xl-6 col-lg-8 col-md-8 col-sm-10 col-10 d-flex flex-column">
      <div class="m-3">
        <div class="d-flex m-2">
          <div>
            <%= image_tag current_user.get_profile_image, class: "rounded-circle border", size: '50x50' %>
          </div>
          <div class="d-flex align-items-center font-weight-bold m-2">
            <%= current_user.name %>
          </div>
        </div>
        <div id="mylevel">
          <%= render 'public/users/mylevel' %>
        </div>
      </div>
      <div class="items-scroll flex-grow-1" style="overflow-y: scroll; height: 500px;">
        <%= render 'index', posts: @posts %>
      </div>
    </div>
  </div>
</div>

<%= javascript_include_tag 'scroll' %>