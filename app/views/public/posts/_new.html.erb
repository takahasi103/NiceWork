<!-- モーダル -->
<div class="modal fade" id="modal-post-new" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with model: @post, url: posts_path, local: true do |f| %>
        <%= f.hidden_field :user_id, value: current_user.id %>
        <div class="modal-body">
          <%= f.text_area :body, placeholder: 'ここに投稿内容を入力してください', class: 'border-0 form-control' %>
          <div id="image-preview"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-light text-dark rounded-circle border-0">
            <span onClick= "$('.post_image').click()">
              <i class="fa fa-image fa-lg" id="select-image"></i>
            </span>
            <%= f.file_field :image, class: "post_image", id: "image-file-field", style: "display: none;" %>
          </button>
          <%= f.submit '投稿する' %>
          <button type="button" class="close" data-dismiss="modal">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- 画像が添付された時にプレビューを表示 -->
<script>
  const imageFileField = document.getElementById('image-file-field');
  const imagePreview = document.getElementById('image-preview');

  imageFileField.addEventListener('change', (e) => {
    const file = e.target.files[0];
    if (!file.type.startsWith('image/')) {
      return;
    }

    const reader = new FileReader();
    reader.onload = (e) => {
      const img = document.createElement('img');
      img.src = e.target.result;
      img.style.width = '400px';
      img.style.height = '300px';
      imagePreview.innerHTML = '';
      imagePreview.appendChild(img);
    };
    reader.readAsDataURL(file);
  });
</script>