<div class="col-md-6 mx-auto">
  <div class="form-inline">
    <span>
      <%= link_to user_path(notification.visitor) do %>
        <strong><%= notification.visitor.name %></strong>
      <% end %>
      さんが
    </span>
    <% case notification.action %>
      <% when 0 %>
        あなたをフォローしました
      <% when 1 %>
        <%= link_to 'あなたの投稿', notification.post, style: "font-weight: bold;" %>
        にいいねしました
      <% when 2 %>
        <% if notification.post.user_id == notification.visited.id %>
          <%= link_to "あなたの投稿", notification.post, style: "font-weight: bold;" %>
        <% else %>
          <span>
            <%= link_to post_path(notification.post) do %>
              <strong><%= notification.post.user.name %></strong>さんの投稿
            <% end %>
          </span>
        <% end %>
        にコメントしました
        <p class="text-muted mb-0">
          <%= Comment.find_by(id: notification.comment_id)&.committed! %>
        </p>
      <% else %>
        unknown action: <%= notification.action %>
    <% end %>
    <div class="small text-muted text-right">
      <%= time_ago_in_words(notification.created_at).upcase %>
    </div>
  </div>
</div>
